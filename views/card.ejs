<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="utf-8">
  <title>Carte de fidélité MDL</title>
  <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  <link rel="stylesheet" href="/static/card.css">
</head>

<body>
  <div class="card" id="carte">
    <img class="bg" src="/static/carte-mdl.png" alt="Fond de carte">

    <div class="field nom"><span class="truncate"><%= nom %></span></div>
    <div class="field prenom"><span class="truncate"><%= prenom %></span></div>
    <div class="field points"><%= points %></div>
    <div class="field reduc"><%= reduction %>%</div>

    <% if (barcode) { %>
      <img class="barcode" src="<%= barcode %>" alt="Code barre">
    <% } %>
  </div>

  <script>
    // Ajustement responsive + plein écran paysage
    (function() {
      function fitAll(){
        const card = document.getElementById('carte');
        if (!card) return;
        // rien à faire ici : layout géré via CSS clamp + ratio variables
      }

      window.addEventListener('load', fitAll);
      window.addEventListener('resize', fitAll);

      // PostMessage : communiquer la hauteur au parent (auto-resize iframe)
      function sendHeight(){
        const r = document.body.getBoundingClientRect();
        parent?.postMessage({ type: 'resizeCarte', height: Math.ceil(r.height) }, '*');
      }
      setTimeout(sendHeight, 200);
      window.addEventListener('resize', () => setTimeout(sendHeight, 150));

      // Double-tap : toggle zoom paysage (optionnel existant)
      let lastTap = 0;
      document.body.addEventListener('touchend', async () => {
        const now = Date.now();
        const delta = now - lastTap;
        lastTap = now;
        if (delta > 400) return;

        const card = document.getElementById('carte');
        if (!card) return;

        if (card.classList.contains('zoomed')) {
          card.classList.remove('zoomed');
          try { await screen.orientation.unlock(); } catch(e){}
          document.exitFullscreen?.();
        } else {
          card.classList.add('zoomed');
          try { await card.requestFullscreen(); } catch(e){}
          try { await screen.orientation.lock('landscape'); } catch(e){}
          setTimeout(fitAll, 300);
        }
      });
      window.addEventListener('orientationchange', () => setTimeout(fitAll, 300));
    });
  </script>
</body>
</html>
